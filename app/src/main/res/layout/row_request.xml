<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="23dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/row_request"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/user_name_req"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Name :"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/needed_blood_req"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/user_name_req"
            android:text="Blood Group : O+"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/location_req"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/needed_blood_req"
            android:text="Location : "
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="italic"
            />


    </LinearLayout>





</RelativeLayout>