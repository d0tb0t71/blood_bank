<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/blood_bank_background"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/donor_bGroup"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/back_bgroup"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="A+"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/donor_bGroup"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/donor_name"
            android:text="Donor Name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/bb_icon"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/donor_mobile"
            android:text="Mobile: 01234567890"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/donor_location"
            android:text="Location : "
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/call_donor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/call" />




</RelativeLayout>