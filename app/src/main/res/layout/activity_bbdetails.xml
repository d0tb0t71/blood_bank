<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BBDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/mainColor"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/mainColor"
                android:gravity="center"
                >

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bb_icon"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/bb_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Bank Name"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_margin="15dp"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >





                <TextView
                    android:id="@+id/bb_mobile_TV"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Mobile : "
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/bb_call_now_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/call_now"
                    />

            <TextView
                android:id="@+id/bb_description_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description : "
                android:layout_margin="10dp"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/bb_location_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location : "
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />














        </LinearLayout>
    </ScrollView>

</LinearLayout>