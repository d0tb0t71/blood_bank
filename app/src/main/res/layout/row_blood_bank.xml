<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/blood_bank_background"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/bb_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:src="@drawable/bb_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bb_icon"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/bb_name"
            android:text="Blood Bank Name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/bb_icon"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/bb_mobile"
            android:text="Mobile: 01234567890"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/bb_location"
            android:text="Location : "
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            />

    </LinearLayout>
    






</RelativeLayout>